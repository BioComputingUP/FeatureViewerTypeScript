{
  "compilerOptions": {
    "declaration": true,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "typeRoots" : ["./node_modules/@types"],
    "types" : [
      "d3",
      "underscore",
      "html-to-image"
    ],
    "lib": ["es6", "dom", "es2017"],
    "outDir": "./lib",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/calculate.ts",
    "src/commons.ts",
    "src/custom-d3.ts",
    "src/feature-viewer.ts",
    "src/fillsvg.ts",
    "src/helper.ts",
    "src/index.ts",
    "src/interfaces.ts",
    "src/tooltip.ts",
    "src/transition.ts"
  ],
  "exclude": ["node_modules", "**/__tests__/*"]
}
